@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="layout-container">
    <Navigation>
    </Navigation>

    @if (IsFactoryPage())
    {
        <TabNavigation />
    }

    <main class="content-area">
        @Body
    </main>

    <AppFooter />
    
    <ToastContainer />
</div>

@code {
    private bool IsFactoryPage()
    {
        string relativePath = NavManager.ToBaseRelativePath(NavManager.Uri);
        bool isRootPath = string.IsNullOrEmpty(relativePath);
        bool isGraphPath = relativePath.StartsWith("graph");
        return isRootPath || isGraphPath;
    }
}
